<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nav_item_background_selector"
    android:padding="@dimen/nav_item_content_padding">

    <ImageView
        android:id="@+id/nav_item_icon_id"
        style="@style/ConstraintLeftCenterVerticalStyle"
        android:layout_width="@dimen/nav_item_icon_square_size"
        android:layout_height="@dimen/nav_item_icon_square_size" />

    <TextView
        android:id="@+id/nav_item_text_id"
        style="@style/ConstraintRightCenterVerticalStyle"
        android:layout_width="@dimen/match_constraint_0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_item_text_margin_left"
        android:layout_marginStart="@dimen/nav_item_text_margin_left"
        android:textColor="@color/nav_item_text_color_selector"
        android:textSize="@dimen/nav_item_text_size"
        app:layout_constraintLeft_toRightOf="@id/nav_item_icon_id"
        app:layout_constraintStart_toEndOf="@id/nav_item_icon_id"
        app:layout_goneMarginLeft="@dimen/zero_gone_margin_size"
        app:layout_goneMarginStart="@dimen/zero_gone_margin_size"
        tools:text="Menu Item" />

</android.support.constraint.ConstraintLayout>