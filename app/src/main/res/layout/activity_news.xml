<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.kaushiknsanji.novalines.NewsActivity"
    tools:openDrawer="start">

    <!-- FrameLayout for the content -->
    <FrameLayout
        android:id="@+id/fragment_frame_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- For the Navigation Drawer on the left -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/nav_recycler_view_id"
        android:layout_width="@dimen/nav_header_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/navBackgroundColorBlueGrey900"
        android:fitsSystemWindows="true" />

</android.support.v4.widget.DrawerLayout>
