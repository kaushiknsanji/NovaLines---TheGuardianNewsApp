<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/defaultBackgroundColor">

    <ImageView
        android:id="@+id/newspaper_image_id"
        android:layout_width="@dimen/match_constraint_0dp"
        android:layout_height="@dimen/match_constraint_0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bookmark_image_id"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/bookmark_image_id"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bookmark_image_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bookmark_image_id"
        app:srcCompat="@drawable/ic_newspaper_selected" />

    <ImageView
        android:id="@+id/bookmark_image_id"
        android:layout_width="@dimen/caption_image_size"
        android:layout_height="@dimen/caption_image_size"
        app:layout_constraintBottom_toTopOf="@+id/message_text_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/newspaper_image_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newspaper_image_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_bookmark_selected" />

    <TextView
        android:id="@+id/message_text_id"
        style="@style/ConstraintBottomCenterHorizontalStyle"
        android:layout_width="@dimen/match_constraint_0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bookmark_msg_text_margin_bottom"
        android:layout_marginTop="@dimen/bookmark_msg_text_margin_top"
        android:gravity="center"
        android:text="@string/bookmark_no_results_text"
        android:textColor="@color/bookmarkMsgTextColor"
        android:textSize="@dimen/bookmark_msg_text_size"
        app:layout_constraintTop_toBottomOf="@+id/bookmark_image_id" />

</android.support.constraint.ConstraintLayout>