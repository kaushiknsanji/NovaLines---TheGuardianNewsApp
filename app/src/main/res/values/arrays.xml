<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Data used for the "Sort by" preference setting -->
    <string-array name="pref_sort_by_entries">
        <item>Most relevant/recent to least relevant/recent</item>
        <item>Least recent to most recent</item>
    </string-array>
    <string-array name="pref_sort_by_values">
        <item>newest</item>
        <item>oldest</item>
    </string-array>

    <!-- Data used for the "Sort based on" preference setting -->
    <string-array name="pref_sort_on_entries">
        <item>The date, the content appeared on the web</item>
        <item>The date, the content appeared in print/newspaper</item>
        <item>The date, the content was last updated</item>
    </string-array>
    <string-array name="pref_sort_on_values">
        <item>published</item>
        <item>newspaper-edition</item>
        <item>last-modified</item>
    </string-array>

    <!-- Data used for the "Preset Start Period" preference setting -->
    <string-array name="pref_start_period_preset_entries">
        <item>Start of the Week</item>
        <item>Start of the Month</item>
    </string-array>

    <!-- IDs of the fixed News Topics shown in the Headlines -->
    <string-array name="news_fixed_section_ids">
        <item>@string/top_stories_section_id</item>
        <item>@string/most_visited_section_id</item>
        <item>@string/world_news_section_id</item>
    </string-array>

    <!-- Names of the fixed News Topics shown in the Headlines -->
    <string-array name="news_fixed_section_names">
        <item>@string/top_stories_section_name</item>
        <item>@string/most_visited_section_name</item>
        <item>@string/world_news_section_name</item>
    </string-array>

    <!-- List of show-fields query parameter values used for
    filtering required content from the News Feed response -->
    <string-array name="show_fields_filter">
        <item>trailText</item>
        <item>byline</item>
        <item>thumbnail</item>
    </string-array>

    <!-- List of resolution texts and button texts for
    resolving the "No Feed available" scenario -->
    <string-array name="nf_resolution_texts">
        <item>@string/nf_app_settings_resolution_text</item>
        <item>@string/nf_network_settings_resolution_text</item>
        <item>@string/nf_refresh_resolution_text</item>
    </string-array>
    <string-array name="nf_resolution_btn_texts">
        <item>@string/nf_app_settings_btn_text</item>
        <item>@string/nf_nw_settings_btn_text</item>
        <item>@string/nf_refresh_btn_text</item>
    </string-array>
    <string-array name="nf_resolution_btn_drawables">
        <item>@drawable/ic_settings_white</item>
        <item>@drawable/ic_network_setting</item>
        <item>@drawable/ic_refresh_white</item>
    </string-array>

</resources>