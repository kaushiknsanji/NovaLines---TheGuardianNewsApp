<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
            <stroke android:width="2dp" android:color="#45a247" />
            <solid android:color="#45a247" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
            <stroke android:width="1dp" android:color="#45a247" />
            <gradient android:angle="90" android:endColor="#283c86" android:startColor="#45a247" android:type="linear" />
        </shape>
    </item>
</selector>